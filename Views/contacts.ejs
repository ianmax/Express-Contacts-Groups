<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Contacts</title>
  <style>
  body {margin:0;}

  .topnav {
    overflow: hidden;
    background-color: #333;
  }

  .topnav a {
    float: left;
    display: block;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  .topnav a:hover {
    background-color: #ddd;
    color: black;
  }

  .topnav a.active {
    background-color: #4CAF50;
    color: white;
  }
</style>
</head>
<body>

  <div class="topnav">
    <a href="/">Home</a></li>
    <a class="active" href="/contacts">Contacts</a>
    <a href="/groups">Groups</a>
    <a href="/profiles">Profiles</a>
    <a href="/addresses">Addresses</a>
  </div>
    <h1>TABLE CONTACTS</h1>
    <table border = "1">
      <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>COMPANY</th>
        <th>TEL. NUMBER</th>
        <th>EMAIL</th>
      </tr>
      <% for (var i = 0; i < dataJsonContacts.length; i++) { %>
        <tr>
          <td><%= dataJsonContacts[i].id %></td>
          <td><%= dataJsonContacts[i].name %></td>
          <td><%= dataJsonContacts[i].company %></td>
          <td><%= dataJsonContacts[i].telp_number %></td>
          <td><%= dataJsonContacts[i].email %></td>
          <td><a href="/contacts/edit/<%= dataJsonContacts[i].id %>">edit</a></td>
          <td><a href="/contacts/delete/<%= dataJsonContacts[i].id %>">delete</a></td>
          <td><a href="/contacts/address/<%= dataJsonContacts[i].id %>">address</a></td>
        </tr>
        <% } %>
      </table>
      <h2>ADD CONTACT</h2>
      <form action="/contacts" method="post">
        Name:
        <br>
        <input type="text" name="name">
        <br>
        Company:
        <br>
        <input type="text" name="company">
        <br>
        Telp. Number:
        <br>
        <input type="text" name="telp_number">
        <br>
        Email:
        <br>
        <input type="text" name="email">
        <br><br>
        <input type="submit" value="Submit">
      </form>
    </body>
    </html>
